{% extends "::base.html.twig" %}

{% block body %}
    <section class="blog-bg">
        <div class="color-overlay">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <div class="blog-title">
                            <h3>liste des invit√©s</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent sit amet
                                pharetra
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.color-overlay end -->
    </section>
    <section class="blog-content">
        <div class="container">
            <div class="container">
                <div class="row">
                    {% for user in couple %}
                        {% if (user.role.role == 'groom') %}
                            <div class="col-sm-6 left-content">
                                <div class="row wow animated fadeInLeft" data-wow-delay="0s" data-wow-duration="1s">
                                    <div class="col-sm-8">
                                        <div class="profile">
                                            <h5>{{ user.firstname ~' '~user.lastname }}
                                                <small>{{ user.role.role }}</small>
                                            </h5>
                                            <p>{{ user.longDescription }}</p>
                                            <ul class="social-icon">
                                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                            </ul>
                                            <!-- /.social-icon end -->
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="people-thumb-img">
                                            <img class="img-responsive"
                                                 src={{ asset(img_url~user.image) }} alt="MaidOfHonor">
                                        </div>
                                        <!-- /.people-thumb-img -->
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if (user.role.role == 'bride') %}
                            <div class="col-sm-6 right-content">
                                <div class="row wow animated fadeInRight" data-wow-delay="0s" data-wow-duration="1s">
                                    <div class="col-sm-4">
                                        <div class="people-thumb-img">
                                            <img class="img-responsive"
                                                 src={{ asset(img_url~user.image) }} alt="BestMan">
                                        </div>
                                        <!-- /.people-thumb-img -->
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="profile">
                                            <h5>{{ user.firstname ~' '~user.lastname }}
                                                <small>{{ user.role.role }}</small>
                                            </h5>
                                            <p>{{ user.longDescription }}</p>
                                            <ul class="social-icon">
                                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                            </ul>
                                            <!-- /.social-icon end -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-offset col-sm-12">
                        <div class="contact-block">
                            <div class="row">
                                <div class="col-sm-6">
                                    <table class="table table-striped table-condensed">
                                        <tr class="info">
                                            <th>Nom</th>
                                            <th>Nombre</th>
                                            {#<th>Mail</th> #}
                                            <th>Message</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                        {% for guest in list %}
                                            {% if guest.user.role.role == 'groom' %}
                                                <tr>
                                                    <td>{{ guest.name }}</td>
                                                    <td>{{ guest.guestNumber }}</td>
                                                    {#<td>{{ guest.email }}</td>#}
                                                    <td>{{ guest.message }}</td>
                                                    <td><a href={{ path('guest_edit', {'id': guest.id}) }}>
                                                            <button><i class="fa fa-pencil" aria-hidden="true"></i></button>
                                                        </a></td>
                                                    <td><a href={{ path('guest_delete', {'id': guest.id}) }}>
                                                            <button><i class="fa fa-times" aria-hidden="true"></i></button>
                                                        </a></td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                    </table>
                                </div>
                                <div class="col-sm-6">
                                    <table class="table table-striped table-condensed">
                                        <tr class="danger">
                                            <th>Nom</th>
                                            <th>Nombre</th>
                                            {#<th>Mail</th>#}
                                            <th>Message</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                        {% for guest in list %}
                                            {% if guest.user.role.role == 'bride' %}
                                                <tr>
                                                    <td>{{ guest.name }}</td>
                                                    <td>{{ guest.guestNumber }}</td>
                                                    {#<td>{{ guest.email }}</td>#}
                                                    <td>{{ guest.message }}</td>
                                                    <td><a href={{ path('guest_edit', {'id': guest.id}) }}>
                                                            <button><i class="fa fa-pencil" aria-hidden="true"></i></button>
                                                        </a></td>
                                                    <td><a href={{ path('guest_delete', {'id': guest.id}) }}>
                                                            <button><i class="fa fa-times" aria-hidden="true"></i></button>
                                                        </a></td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.contact-block end -->
            </div>
        </div>
    </section>
{% endblock %}
