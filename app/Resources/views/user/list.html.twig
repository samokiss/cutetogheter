{% extends "::base.html.twig" %}

{% block body %}
    <table>
        <tr>
            <th>Photo</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date de Naissance</th>
            <th>Présentation</th>
            <th>Description</th>
            <th>Role</th>
            <th>Téléphone</th>
            <th>mail</th>
        </tr>
        {% for user in users %}
        <tr>
            <td><img class="img-responsive" src={{ asset('uploads/pictures/'~user.image) }}></td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.birthdate | date }}</td>
            <td>{{ user.shortDescription }}</td>
            <td>{{ user.longDescription }}</td>
            <td>{{ user.eventRole }}</td>
            <td>{{ user.phone }}</td>
            <td>{{ user.mail }}</td>
            <td><a href={{ path('user_edit', {'id': user.id}) }}><button>edit</button></a></td>
            <td><a href={{ path('user_delete', {'id': user.id}) }}><button>remove</button></a></td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
