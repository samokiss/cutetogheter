{% extends "::base.html.twig" %}

{% block body %}
<section class="blog-bg">
    <div class="color-overlay">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <div class="blog-title">
                        <h3>Liste des Personnes</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.color-overlay end -->
</section>

<section class="blog-content">
    <div class="container">
        <div class="row">
            <table>
                <tr>
                    <th>Photo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Date de Naissance</th>
                    <th>Présentation</th>
                    <th>Description</th>
                    <th>Role</th>
                    <th>Adresse</th>
                    <th>Téléphone</th>
                    <th>mail</th>
                    <th>Sexe</th>
                    <th>Activé</th>
                </tr>
                {% for user in users %}
                    <tr>
                        <td><img class="img-responsive max_width" src={{ asset('uploads/pictures/'~user.image) }}>
                        </td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.birthdate | date }}</td>
                        <td>{{ user.shortDescription }}</td>
                        <td>{{ user.longDescription }}</td>
                        <td>{{ user.role.role }}</td>
                        <td>{{ user.address~', '~user.city~', '~user.country }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.mail }}</td>
                        <td>{{ user.sex }}</td>
                        <td>{{ user.enabled }}</td>
                        <td><a href={{ path('user_edit', {'id': user.id}) }}>
                                <button><i class="fa fa-pencil" aria-hidden="true"></i></button>
                            </a></td>
                        <td><a href={{ path('user_delete', {'id': user.id}) }}>
                                <button><i class="fa fa-times" aria-hidden="true"></i></button>
                            </a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</section>
{% endblock %}
