{% extends "::base.html.twig" %}

{% block body %}
    <table class="table">
        <tr>
            <th>Photo</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date de Naissance</th>
            <th>Présentation</th>
            <th>Description</th>
            <th>Role</th>
            <th>Téléphone</th>
            <th>mail</th>
        </tr>
        <tr>
            <td><img class="img-responsive max_width" src={{ asset('uploads/pictures/'~user.image) }}></td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.birthdate | date }}</td>
            <td>{{ user.shortDescription }}</td>
            <td>{{ user.longDescription }}</td>
            <td>{{ user.role.role }}</td>
            <td>{{ user.phone }}</td>
            <td>{{ user.mail }}</td>
        </tr>
    </table>
{% endblock %}
